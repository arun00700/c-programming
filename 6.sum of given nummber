// Online C compiler to run C program online
#include<stdio.h>
int main()
{ 

  int no, digit, sum = 0;

    printf ("Insert a number \n"); 
    scanf ("%d", &no); 
    while  (no > 0) 
    { 
        digit = no % 10; 
        printf("%d\n",digit );
        sum  = sum + digit;
        printf("%d\n",sum);
        no /= 10;
        printf("%d\n",no);
    } 
    
    printf("Sum of the numbers %d ", sum); 
  return 0;
} 
